<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home Design Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row h-100">
            <aside class="col-12 col-md-2 p-0 bg-light">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm mt-lg-5">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                   
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                        <ul class="navbar-nav flex-sm-column flex-grow-1 ">
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name</a>
                            </li>
                            <li class="nav-item mb-2">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                            <hr class="border border-secondary w-100 my-1">
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="EmployeeIndex">Home</a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Inventory">Inventory</a>
                            </li>

                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CustomerData" asp-action="Index">Customers</a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark">Coming soon</a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark">Coming soon</a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark">Coming soon</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>
            <main class="col py-3 flex-grow-1">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
